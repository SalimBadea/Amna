<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Amna" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <item name="android:windowBackground">@color/backgroundColor</item>

        <item name="colorSurface">@color/backgroundColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationTheme">
        <item name="backgroundColor">@color/backgroundColor</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Amna">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Set a transparent .png as your icon -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@color/transparent</item>
    </style>

    <style name="ImageRoundedStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ImageRoundedStyle8" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="CardViewTheme" parent="Widget.MaterialComponents.CardView">
        <item name="android:elevation">@dimen/_8sdp</item>
        <item name="cardElevation">@dimen/_4sdp</item>
        <item name="cardCornerRadius">@dimen/_16sdp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>